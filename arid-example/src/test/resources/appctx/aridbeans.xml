<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:arid="http://chrisrichardson.net/schema/arid"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
       http://chrisrichardson.net/schema/arid http://chrisrichardson.net/schema/arid.xsd">

	<!-- 
		Autowire constructors for the classes in the  net.chrisrichardson.arid.example.domain package
		that are annotated with @ServiceImpl
	-->

	<arid:define-beans package="net.chrisrichardson.arid.example.domain"
		pattern="@net.chrisrichardson.arid.example.annotations.ServiceImpl *..*">
		<arid:extras>
			<!--  
				This bean definition is merged with the autogenerated definition to add setter 
				injection for the foo property (in addition to the autowired constructor)
			-->
			<bean name="moneyTransferService">
				<property name="foo" value="bar" />
			</bean>
		</arid:extras>
	</arid:define-beans>

	<!-- 
		Autowire by type (setters) the classes in the net.chrisrichardson.arid.example.dao package
	-->

	<arid:define-beans package="net.chrisrichardson.arid.example.dao"
		autowire="byType"  />

</beans>